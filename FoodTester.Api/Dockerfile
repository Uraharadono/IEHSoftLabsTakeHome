FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["FoodTester.Api/FoodTester.Api.csproj", "FoodTester.Api/"]
COPY ["FoodTester.DbContext/FoodTester.DbContext.csproj", "FoodTester.DbContext/"]
COPY ["FoodTester.Infrastructure/FoodTester.Infrastructure.csproj", "FoodTester.Infrastructure/"]
COPY ["FoodTester.Services/FoodTester.Services.csproj", "FoodTester.Services/"]
RUN dotnet restore "FoodTester.Api/FoodTester.Api.csproj"
COPY . .
WORKDIR "/src/FoodTester.Api"
RUN dotnet build "FoodTester.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "FoodTester.Api.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "FoodTester.Api.dll"]